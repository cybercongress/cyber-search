{
  "method": "PUT",
  "url": "/${chainName}.block/_mapping/block",
  "data": {
    "block": {
      "properties": {
        "hash": {
          "type": "keyword",
          "index": "no",
          "include_in_all": true,
          "cql_collection": "singleton"
        },
        "number": {
          "type": "long",
          "index": "no",
          "include_in_all": true,
          "cql_collection": "singleton"
        },
        "size": {
          "type": "long",
          "index": "no",
          "include_in_all": false,
          "cql_collection": "singleton"
        },
        "timestamp": {
          "type": "date",
          "index": "no",
          "include_in_all": false,
          "cql_collection": "singleton"
        },
        "tx_number": {
          "type": "integer",
          "index": "no",
          "include_in_all": false,
          "cql_collection": "singleton"
        }
      }
    }
  }
}